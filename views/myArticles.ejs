<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Articles - Modern Blog</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>
    
    <main class="main-content">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">
                    <div class="page-header">
                        <h1>My Articles</h1>
                        <p>Manage and view your published articles</p>
                        <a href="/articles/new" class="btn btn-primary">
                            <i class="fas fa-plus"></i>
                            Write New Article
                        </a>
                    </div>
            
                    <!-- Enhanced Status Filter -->
                    <div class="filters-section">
                        <div class="filter-header">
                            <h3 class="filter-title">
                                <i class="fas fa-filter"></i>
                                Filter Articles
                            </h3>
                            <div class="articles-summary">
                                <span class="total-count">
                                    <i class="fas fa-file-alt"></i>
                                    <%= totalArticles || articles.length %> Total
                                </span>
                            </div>
                        </div>
                        
                        <form method="GET" class="filter-form">
                            <div class="filter-controls">
                                <div class="filter-group">
                                    <label for="status" class="filter-label">
                                        <i class="fas fa-tag"></i>
                                        Article Status
                                    </label>
                                    <div class="select-wrapper">
                                        <select name="status" id="status" class="filter-select" onchange="this.form.submit()">
                                            <option value="all" <%= currentStatus === 'all' ? 'selected' : '' %>>
                                                All Articles
                                            </option>
                                            <option value="draft" <%= currentStatus === 'draft' ? 'selected' : '' %>>
                                                üìù Drafts
                                            </option>
                                            <option value="published" <%= currentStatus === 'published' ? 'selected' : '' %>>
                                                üåê Published
                                            </option>
                                            <option value="archived" <%= currentStatus === 'archived' ? 'selected' : '' %>>
                                                üì¶ Archived
                                            </option>
                                        </select>
                                        <i class="fas fa-chevron-down select-icon"></i>
                                    </div>
                                </div>
                                
                                <div class="status-indicators">
                                    <div class="status-item">
                                        <span class="status-dot draft"></span>
                                        <span class="status-text">Draft</span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-dot published"></span>
                                        <span class="status-text">Published</span>
                                    </div>
                                    <div class="status-item">
                                        <span class="status-dot archived"></span>
                                        <span class="status-text">Archived</span>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
    
    <!-- Articles List -->
    <% if (articles.length > 0) { %>
        <div class="my-articles-list">
            <% articles.forEach(article => { %>
                <div class="my-article-card">
                    <!-- Featured Image -->
                    <% if (article.featuredImage) { %>
                        <div class="article-image">
                            <img src="<%= article.featuredImage %>" alt="<%= article.title %>">
                        </div>
                    <% } %>
                    
                    <div class="article-main">
                        <div class="article-header">
                            <h3 class="article-title">
                                <a href="/articles/<%= article._id %>"><%= article.title %></a>
                            </h3>
                            <span class="status-badge status-<%= article.status %>">
                                <%= article.status.charAt(0).toUpperCase() + article.status.slice(1) %>
                            </span>
                        </div>
                        
                        <p class="article-summary">
                            <%= article.summary || article.content.substring(0, 200) + '...' %>
                        </p>
                        
                        <div class="article-meta">
                            <span class="meta-item">
                                <i class="fas fa-folder"></i>
                                <%= article.category %>
                            </span>
                            <span class="meta-item">
                                <i class="fas fa-calendar"></i>
                                <%= new Date(article.createdAt).toLocaleDateString() %>
                            </span>
                            <% if (article.status === 'published') { %>
                                <span class="meta-item">
                                    <i class="fas fa-eye"></i>
                                    <%= article.views %> views
                                </span>
                                <span class="meta-item">
                                    <i class="fas fa-heart"></i>
                                    <%= article.likeCount %> likes
                                </span>
                                <span class="meta-item">
                                    <i class="fas fa-comment"></i>
                                    <%= article.commentCount %> comments
                                </span>
                            <% } %>
                        </div>
                    </div>
                    
                    <div class="article-actions">
                        <a href="/articles/<%= article._id %>" class="btn btn-secondary">
                            <i class="fas fa-eye"></i>
                            View
                        </a>
                        <a href="/articles/<%= article._id %>/edit" class="btn btn-primary">
                            <i class="fas fa-edit"></i>
                            Edit
                        </a>
                        <form method="POST" action="/articles/<%= article._id %>/delete" class="delete-form" style="display: inline;">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this article?')">
                                <i class="fas fa-trash"></i>
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <!-- Pagination -->
        <% if (totalPages > 1) { %>
            <div class="pagination">
                <% if (hasPrevPage) { %>
                    <a href="?page=<%= prevPage %>&status=<%= currentStatus %>" class="page-btn">
                        <i class="fas fa-chevron-left"></i>
                        Previous
                    </a>
                <% } %>
                
                <div class="page-numbers">
                    <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                        <a href="?page=<%= i %>&status=<%= currentStatus %>" 
                           class="page-number <%= i === currentPage ? 'active' : '' %>">
                            <%= i %>
                        </a>
                    <% } %>
                </div>
                
                <% if (hasNextPage) { %>
                    <a href="?page=<%= nextPage %>&status=<%= currentStatus %>" class="page-btn">
                        Next
                        <i class="fas fa-chevron-right"></i>
                    </a>
                <% } %>
            </div>
        <% } %>
    <% } else { %>
                        <div class="no-articles">
                            <i class="fas fa-file-alt fa-3x"></i>
                            <h3>No articles yet</h3>
                            <p>
                                <% if (currentStatus === 'all') { %>
                                    You haven't written any articles yet.
                                <% } else { %>
                                    No articles found with status: <%= currentStatus %>
                                <% } %>
                            </p>
                            <a href="/articles/new" class="btn btn-primary">
                                <i class="fas fa-plus"></i>
                                Write Your First Article
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </main>
    
    <%- include('partials/footer') %>
    
    <script src="/js/main.js"></script>
</body>
</html>